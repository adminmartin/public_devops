pipeline {
  agent {
    label 'docker' 
  }
  environment {
    registry = "martindevopsdocker/martindockerhub"
    registryCredential = 'dockerhub'
    dockerImage = ''
  }
      stages {
        stage('Build image') {
            steps {
		script {
                dockerImage = docker.build registry + ":$BUILD_NUMBER"
            }
	}
        }
    stage('Deploy Image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            dockerImage.push()
          }
        }
      }
}
    stage('Run Image') {
      steps{
  	sh "docker run –dit –p 80:80 $registry:$BUILD_NUMBER"
        }
      }



}
}
